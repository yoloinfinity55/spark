    <!-- 3-column responsive grid -->
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {% for post in collections.posts %}
        <article class="glass-effect rounded-2xl p-8 card-hover animate-fade-in group flex flex-col justify-between" style="animation-delay: {{ loop.index * 0.1 }}s;">
          <div>
            <h3 class="text-2xl font-bold mb-3 group-hover:text-indigo-600 transition-colors duration-200">
              <a href="{{ post.url | url }}" class="text-slate-800 hover:text-indigo-600">
                {{ post.data.title }}
              </a>
            </h3>
            <div class="flex items-center text-slate-500 text-sm space-x-4 mb-4">
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                {{ post.data.date | dateFormat }}
              </span>
              <span class="px-3 py-1 bg-indigo-100 text-indigo-700 rounded-full text-xs font-medium">Article</span>
            </div>
            <p class="text-slate-700 text-lg leading-relaxed">{{ post.data.description }}</p>
          </div>

          <!-- Centered Read More Button -->
          <div class="mt-6 flex justify-center">
            <a href="{{ post.url | url }}" class="btn-primary text-white px-6 py-3 rounded-xl font-semibold inline-flex items-center group/btn">
              Read more
              <svg class="w-4 h-4 ml-2 group-hover/btn:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
{% else %}
